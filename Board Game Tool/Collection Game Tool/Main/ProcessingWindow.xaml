<Window x:Class="Collection_Game_Tool.Main.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:gamesetup="clr-namespace:Collection_Game_Tool.GameSetup"
        Title="ProcessingWindow" Height="300" Width="300"
		Closing="Window_Closing"
		Initialized="Window_Initialized">
    <Grid>
		<StackPanel x:Name="GeneratingFileAnimation" Margin="10">
			<Label x:Name="GeneratingFileLabel" FontSize="20" HorizontalAlignment="Center" Content="Generating File"/>
			<!--20-->
		<Viewbox Name="GeneratingFileViewbox" Width="50" Height="50"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
			<!--w50h50-->
			<gamesetup:CircularProgressBar/>
		</Viewbox>

		</StackPanel>
	</Grid>
</Window>
